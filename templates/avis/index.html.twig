{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
    <h1>Liste des avis</h1>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Note</th>
                <th>Commentaire</th>
                {# <th>actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                {# <td>{{ avi.id }}</td> #}
                <td>{{ avi.note }}</td>
                <td>{{ avi.commentaire }}</td>
                <td>
                    <a class="btn" href="{{ path('app_avis_show', {'id': avi.id}) }}">Afficher</a>
                    <a class="btn" href="{{ path('app_avis_edit', {'id': avi.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_avis_new') }}">Cr√©er un nouvel avis</a>

</div>
<style>
.btn {
    background-color:#609A7D;
     color:FFFFFF;
       
}
.btn:hover {
  color: black;
}
h1 {
    font-family: Arial;
    text-align: center;
}
</style>
{% endblock %}
