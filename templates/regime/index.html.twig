{% extends 'base.html.twig' %}

{% block title %}Regime {% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des types de régimes</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                {# <th>actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for regime in regimes %}
            <tr>
                {# <td>{{ regime.id }}</td> #}
                <td>{{ regime.nom }}</td>
                <td>
                    <a class="btn" href="{{ path('app_regime_show', {'id': regime.id}) }}">Afficher</a>
                    <a class="btn" href="{{ path('app_regime_edit', {'id': regime.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_regime_new') }}">Créer un nouveau type de régime</a>
</div>
<style>
.btn {
    background-color:#609A7D;
     color:FFFFFF;
       
}
.btn:hover {
  color: black;
}
h1 {
    font-family: Arial;
    text-align: center;
}
</style>
{% endblock %}
